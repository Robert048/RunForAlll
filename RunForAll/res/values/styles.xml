<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="headerTxt">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- STANDAARD verzend BUTTONS -->
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:height">35dp</item>
        <item name="android:width">110dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- LOGIN PAGINA BUTTONS -->
    <style name="button3" parent="@android:style/Widget.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:height">35dp</item>
        <item name="android:width">100dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- STANDAARD pagina buttons -->
    <style name="button2" parent="@android:style/Widget.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:height">35dp</item>
        <item name="android:width">150dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button2</item>
    </style>

    <!-- Label styling -->
    <style name="labels" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Pushbericht styling -->
    <style name="pushMsgFields" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#af9999</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <!-- overzichtvrienden vak styling -->
    <style name="overzichtVrienden" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0579fc</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>